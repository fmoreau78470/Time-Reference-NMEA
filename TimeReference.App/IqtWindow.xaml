<Window x:Class="TimeReference.App.IqtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TimeReference.App"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Qualité Signal GPS" Height="450" Width="350"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded" Closing="Window_Closing">

    <Border Background="{DynamicResource WindowBackground}" CornerRadius="10" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>
        
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Qualité Signal GPS" Foreground="{DynamicResource PrimaryText}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Button x:Name="BtnClose" HorizontalAlignment="Right" VerticalAlignment="Center" Width="24" Height="24" Click="BtnClose_Click" Cursor="Hand" Background="Transparent" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="{TemplateBinding Background}">
                                <Ellipse Fill="#FFC42B1C" Width="20" Height="20"/>
                                <Path Data="M 7,7 L 13,13 M 13,7 L 7,13" Stroke="{DynamicResource PrimaryText}" StrokeThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Main Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                
                <!-- Score Circle -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                    <Ellipse x:Name="LedIndicator" Width="12" Height="12" Fill="#FF333333" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0" Opacity="0.8"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    
                    <local:GaugeControl x:Name="GaugeScore" Title="SCORE" Unit="%" 
                                        Width="140" Height="140"
                                        Minimum="0" Maximum="100" 
                                        Limit1="50" Limit2="80" 
                                        IsInverted="False"
                                        ToolTip="Indice global de qualité (0-100%) calculé à partir du SNR, HDOP et nombre de satellites."/>
                </StackPanel>

                <!-- Metrics -->
                <UniformGrid Columns="3" Margin="0,0,0,25">
                    <!-- SNR Gauge: 0-50. Red < 20, Orange 20-30, Green > 30 -->
                    <local:GaugeControl x:Name="GaugeSnr" Title="SNR" Unit="dB" 
                                        Minimum="0" Maximum="50" 
                                        Limit1="20" Limit2="30" 
                                        IsInverted="False"
                                        ToolTip="Rapport Signal/Bruit: > 30dB est excellent."/>

                    <!-- HDOP Gauge: 0-10. Green < 2, Orange 2-5, Red > 5 (Inverted) -->
                    <local:GaugeControl x:Name="GaugeHdop" Title="HDOP" Unit="" 
                                        Minimum="0" Maximum="10" 
                                        Limit1="2" Limit2="5" 
                                        IsInverted="True"
                                        ToolTip="Il s'agit d'un indicateur de la précision géométrique de votre positionnement.&#x0a;Plus simplement, il vous dit si la disposition des satellites dans le ciel est favorable ou non&#x0a;pour calculer votre position à la surface de la Terre (latitude et longitude).&#x0a;Plus c'est bas, mieux c'est."/>

                    <!-- SATS Gauge: 0-20. Red < 4, Orange 4-8, Green > 8 -->
                    <local:GaugeControl x:Name="GaugeSat" Title="SATS" Unit="#" 
                                        Minimum="0" Maximum="20" 
                                        Limit1="4" Limit2="8" 
                                        IsInverted="False"
                                        ToolTip="Nombre de satellites utilisés."/>
                </UniformGrid>

                <Button x:Name="BtnRetry" Content="Réessayer connexion" Height="35" Background="{DynamicResource SecondaryText}" Foreground="{DynamicResource PrimaryText}" BorderThickness="0" Click="BtnRetry_Click" Cursor="Hand" Margin="20,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="10,0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Footer Status -->
            <TextBlock x:Name="TxtStatus" Grid.Row="2" Text="Initialisation..." Foreground="{DynamicResource SecondaryText}" FontSize="11" TextTrimming="CharacterEllipsis" Margin="0,15,0,0" HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>

<Window x:Class="TimeReference.App.IqtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TimeReference.App"
        xmlns:ext="clr-namespace:TimeReference.App.MarkupExtensions"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{ext:Lang IQT_TITLE}" Height="600" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded" Closing="Window_Closing">

    <Border Background="{DynamicResource WindowBackground}" CornerRadius="10" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>
        
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="{ext:Lang IQT_HEADER}" Foreground="{DynamicResource PrimaryText}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Button x:Name="BtnClose" HorizontalAlignment="Right" VerticalAlignment="Center" Width="24" Height="24" Click="BtnClose_Click" Cursor="Hand" Background="Transparent" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid Background="{TemplateBinding Background}">
                                <Ellipse Fill="#FFC42B1C" Width="20" Height="20"/>
                                <Path Data="M 7,7 L 13,13 M 13,7 L 7,13" Stroke="{DynamicResource PrimaryText}" StrokeThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Main Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                
                <!-- Score Circle -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                    <Ellipse x:Name="LedIndicator" Width="12" Height="12" Fill="#FF333333" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0" Opacity="0.8"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    
                    <local:GaugeControl x:Name="GaugeScore" Title="{ext:Lang IQT_SCORE_TITLE}" Unit="%" 
                                        Width="140" Height="140"
                                        Minimum="0" Maximum="100" 
                                        Limit1="50" Limit2="80" 
                                        IsInverted="False"
                                        ToolTip="{ext:Lang IQT_SCORE_TOOLTIP}"/>
                </StackPanel>

                <!-- Metrics -->
                <UniformGrid Columns="3" Margin="0,0,0,25">
                    <!-- SNR Gauge: 0-50. Red < 20, Orange 20-30, Green > 30 -->
                    <local:GaugeControl x:Name="GaugeSnr" Title="{ext:Lang IQT_SNR_TITLE}" Unit="dB" 
                                        Minimum="0" Maximum="50" 
                                        Limit1="20" Limit2="30" 
                                        IsInverted="False"
                                        ToolTip="{ext:Lang IQT_SNR_TOOLTIP}"/>

                    <!-- HDOP Gauge: 0-10. Green < 2, Orange 2-5, Red > 5 (Inverted) -->
                    <local:GaugeControl x:Name="GaugeHdop" Title="{ext:Lang IQT_HDOP_TITLE}" Unit="" 
                                        Minimum="0" Maximum="10" 
                                        Limit1="2" Limit2="5" 
                                        IsInverted="True"
                                        ToolTip="{ext:Lang IQT_HDOP_TOOLTIP}"/>

                    <!-- SATS Gauge: 0-20. Red < 4, Orange 4-8, Green > 8 -->
                    <local:GaugeControl x:Name="GaugeSat" Title="{ext:Lang IQT_SATS_TITLE}" Unit="#" 
                                        Minimum="0" Maximum="20" 
                                        Limit1="4" Limit2="8" 
                                        IsInverted="False"
                                        ToolTip="{ext:Lang IQT_SATS_TOOLTIP}"/>
                </UniformGrid>

                <!-- Terminal NMEA -->
                <GroupBox Header="{ext:Lang GRP_NMEA_TERMINAL}" Margin="0,0,0,15" Height="150" BorderBrush="{DynamicResource BorderColor}" Foreground="{DynamicResource PrimaryText}">
                    <TextBox x:Name="TxtNmeaTerminal"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="11"
                             Background="#FF1E1E1E"
                             Foreground="#FF00FF00"
                             BorderThickness="0"
                             Padding="5"/>
                </GroupBox>

                <Button x:Name="BtnRetry" Content="{ext:Lang BTN_RETRY_CONNECT}" Height="35" Background="{DynamicResource SecondaryText}" Foreground="{DynamicResource PrimaryText}" BorderThickness="0" Click="BtnRetry_Click" Cursor="Hand" Margin="20,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="10,0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Footer Status -->
            <TextBlock x:Name="TxtStatus" Grid.Row="2" Text="{ext:Lang STATUS_INIT}" Foreground="{DynamicResource SecondaryText}" FontSize="11" TextTrimming="CharacterEllipsis" Margin="0,15,0,0" HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>

<Window x:Class="TimeReference.App.ClockVarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ext="clr-namespace:TimeReference.App.MarkupExtensions"
        Title="{ext:Lang CLOCKVAR_TITLE}" Height="800" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{ext:Lang LBL_CLOCKVAR_HEADER}" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Tableau des variables -->
        <DataGrid Grid.Row="1" x:Name="DgVars" AutoGenerateColumns="False" IsReadOnly="True" 
                  HeadersVisibility="Column" GridLinesVisibility="Horizontal" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{ext:Lang COL_PARAM}" Binding="{Binding Key}" Width="120" FontWeight="Bold"/>
                <DataGridTextColumn Header="{ext:Lang COL_VALUE}" Binding="{Binding Value}" Width="*"/>
            </DataGrid.Columns>
            
            <!-- Style pour ajouter le ToolTip sur toute la ligne -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="ToolTip">
                        <Setter.Value>
                            <ToolTip Content="{Binding Description}"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <TextBlock Grid.Row="2" Text="{ext:Lang LBL_RAW_OUTPUT}" FontWeight="Bold" Margin="0,10,0,5"/>
        
        <TextBox Grid.Row="3" x:Name="TxtRaw" TextWrapping="Wrap" IsReadOnly="True" 
                 VerticalScrollBarVisibility="Auto" FontFamily="Consolas" Background="#F5F5F5" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="4" Text="{ext:Lang LBL_HOVER_HINT}" 
                   FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0" HorizontalAlignment="Center"/>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnPause" Content="{ext:Lang BTN_PAUSE}" Width="100" Margin="0,0,10,0" Click="BtnPause_Click"/>
            <Button x:Name="BtnCopy" Content="{ext:Lang BTN_COPY}" Width="100" Margin="0,0,10,0" Click="BtnCopy_Click"/>
            <Button Content="{ext:Lang BTN_CLOSE}" Width="100" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>

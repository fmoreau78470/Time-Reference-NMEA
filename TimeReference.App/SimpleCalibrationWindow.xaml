<Window x:Class="TimeReference.App.SimpleCalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ext="clr-namespace:TimeReference.App.MarkupExtensions"
        Title="{ext:Lang CALIB_TITLE}" Height="700" Width="950"
        WindowStartupLocation="CenterOwner" Background="#FF1E1E1E">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Top Controls -->
            <RowDefinition Height="2*"/>   <!-- Graph -->
            <RowDefinition Height="Auto"/> <!-- Stats -->
            <RowDefinition Height="1*"/>   <!-- NTPQ Output -->
            <RowDefinition Height="Auto"/> <!-- Bottom Actions -->
        </Grid.RowDefinitions>

        <!-- Top Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="BtnStart" Click="BtnStart_Click" Width="40" Height="40" Background="#FF007ACC" ToolTip="{ext:Lang TIP_START_STOP}" Margin="0,0,20,0">
                    <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z" Fill="White" Stretch="Uniform" Height="16" Width="16"/>
                </Button>

                <Grid VerticalAlignment="Center">
                    <StackPanel x:Name="PnlDurationSettings" Orientation="Horizontal">
                        <TextBlock Text="{ext:Lang LBL_DURATION}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Slider x:Name="SldDuration" Minimum="1" Maximum="60" Value="10" Width="150" VerticalAlignment="Center" ValueChanged="SldDuration_ValueChanged"/>
                        <TextBlock x:Name="LblDuration" Text="10 min" VerticalAlignment="Center" Margin="10,0,0,0" Width="50"/>
                    </StackPanel>
                    <TextBlock x:Name="LblCountdown" Text="--:--" Foreground="LimeGreen" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Visibility="Collapsed"/>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Graph -->
        <Border Grid.Row="1" BorderBrush="#FF444444" BorderThickness="1" Background="Black" Margin="0,0,0,10" ClipToBounds="True"
                MouseWheel="Graph_MouseWheel" MouseLeftButtonDown="Graph_MouseLeftButtonDown" 
                MouseLeftButtonUp="Graph_MouseLeftButtonUp" MouseMove="Graph_MouseMove" Cursor="SizeWE">
            <Canvas x:Name="CnvGraph" SizeChanged="CnvGraph_SizeChanged">
                <!-- Les lignes seront ajoutées par le code C# -->
                <TextBlock Text="{ext:Lang LBL_OFFSET_MS}" Foreground="Gray" Canvas.Left="5" Canvas.Top="5" FontSize="10"/>
                
                <!-- Légende -->
                <StackPanel Orientation="Horizontal" Canvas.Right="10" Canvas.Top="5">
                    <Rectangle Width="10" Height="10" Fill="LimeGreen" Margin="0,0,5,0"/>
                    <TextBlock Text="{ext:Lang LEGEND_GPS}" FontSize="10" Margin="0,0,10,0"/>
                    <Rectangle Width="10" Height="10" Fill="Cyan" Margin="0,0,5,0"/>
                    <TextBlock Text="{ext:Lang LEGEND_INTERNET}" FontSize="10"/>
                </StackPanel>
            </Canvas>
        </Border>

        <!-- Stats & Progress -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock x:Name="LblStatus" Text="{ext:Lang LBL_READY}" FontWeight="Bold"/>
                <TextBlock x:Name="LblStats" Text="{ext:Lang STATUS_WAITING_DATA}" FontSize="14" Foreground="#FF00CC00" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- NTPQ Output & Logs -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Raw NTPQ Output -->
            <GroupBox Header="{ext:Lang GRP_NTPQ_OUTPUT}" Grid.Column="0" Margin="0,0,5,0" Foreground="Gray">
                <TextBox x:Name="TxtNtpOutput" Background="#FF101010" Foreground="#FF00FF00" FontFamily="Consolas" FontSize="11" 
                         IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" BorderThickness="0"/>
            </GroupBox>

            <!-- Logs -->
            <GroupBox Header="{ext:Lang GRP_LOGS}" Grid.Column="1" Margin="5,0,0,0" Foreground="Gray">
                <TextBox x:Name="TxtLogs" Background="#FF101010" Foreground="#FFCCCCCC" FontFamily="Consolas" FontSize="11" 
                         IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" BorderThickness="0"/>
            </GroupBox>
        </Grid>

        <!-- Bottom Actions -->
        <Grid Grid.Row="4">
            <Button x:Name="BtnClose" Content="{ext:Lang BTN_CLOSE}" Click="BtnClose_Click" HorizontalAlignment="Center" Width="100"/>
        </Grid>
    </Grid>
</Window>
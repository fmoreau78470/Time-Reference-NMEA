<Window x:Class="TimeReference.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Time Reference NMEA - Control Panel" 
        Width="620" Height="270"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseDoubleClick="Window_MouseDoubleClick"
        Icon="Assets/Icone-Time-Reference.ico"
        Background="{DynamicResource WindowBackground}">

    <Window.Resources>
        <!-- Style pour les interrupteurs modernes -->
        <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Cursor="Hand">
                            <Border x:Name="Track" CornerRadius="8" Background="{DynamicResource SecondaryText}" Opacity="0.5"/>
                            <Border x:Name="Thumb" CornerRadius="6" Background="White" Width="12" Height="12" HorizontalAlignment="Left" Margin="2">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.2"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{DynamicResource SuccessColor}"/>
                                <Setter TargetName="Track" Property="Opacity" Value="1"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styles pour harmoniser l'apparence -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>
        <Style x:Key="ClockTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Digital-7, Consolas, Monospace"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="1.5" Opacity="0.2" Direction="270" Color="{DynamicResource ShadowColor}"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15" x:Name="MainRootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: Header Dashboard -->
            <RowDefinition Height="Auto"/>
            <!-- 1: Connection (Hidden) -->
            <RowDefinition Height="Auto"/>
            <!-- 2: Main Controls -->
            <RowDefinition Height="*"/>
            <!-- 3: Peers Data -->
        </Grid.RowDefinitions>

        <!-- 0. Header Dashboard (Horloges, Santé, Position) -->
        <Border Grid.Row="0" x:Name="HeaderBorder" Background="{DynamicResource CardBackground}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270" Color="{DynamicResource ShadowColor}"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" x:Name="ColClocks"/>
                    <!-- Clocks -->
                    <ColumnDefinition Width="*"/>
                    <!-- Health/Status -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Quality -->
                    <ColumnDefinition Width="Auto" x:Name="ColPosition"/>
                    <!-- Position -->
                </Grid.ColumnDefinitions>

                <!-- Clocks -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                        <Path Data="M21,16H3V4H21M21,2H3C1.89,2 1,2.89 1,4V16A2,2 0 0,0 3,18H10V20H8V22H16V20H14V18H21A2,2 0 0,0 23,16V4C23,2.89 22.1,2 21,2Z" Fill="{DynamicResource PrimaryText}" Stretch="Uniform" Height="14" Width="14" Margin="0,0,10,0" VerticalAlignment="Center" ToolTip="Système"/>
                        <TextBlock x:Name="LblSysTime" Text="--:--:--" Style="{StaticResource ClockTextStyle}" Foreground="{DynamicResource PrimaryText}" ToolTip="Heure système"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Path Data="M12,2L8,6L11,9L7,13L4,10L2,12L5,15L2,18L4,20L7,17L10,20L12,18L9,15L13,11L16,14L20,10L12,2M17,7L18,8L22,4L21,3L17,7M18,9L19,10L23,6L22,5L18,9Z" Fill="{DynamicResource PrimaryText}" Stretch="Uniform" Height="14" Width="14" Margin="0,0,10,0" VerticalAlignment="Center" ToolTip="GPS"/>
                        <TextBlock x:Name="LblGpsTimeHeader" Text="--:--:--" Style="{StaticResource ClockTextStyle}" Foreground="{DynamicResource AccentColor}" ToolTip="Heure GPS"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="UTC" VerticalAlignment="Center" Margin="24,0,5,0" Foreground="{DynamicResource PrimaryText}" FontSize="10"/>
                        <ToggleButton x:Name="ChkUtc" Click="ChkUtc_Click" Style="{StaticResource SwitchToggleStyle}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Health & Status -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="LblStatus" Text="Prêt" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryText}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock x:Name="LblHealth" Text="100%" FontSize="36" FontWeight="Black" Foreground="{DynamicResource SuccessColor}" HorizontalAlignment="Center" />
                </StackPanel>

                <!-- Quality (Offset/Jitter) -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,2">
                        <TextBlock Text="Offset: " FontSize="11" Foreground="{DynamicResource SecondaryText}"/>
                        <TextBlock x:Name="LblOffset" Text="-- ms" FontSize="11" Foreground="{DynamicResource SecondaryText}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Jitter: " FontSize="11" Foreground="{DynamicResource SecondaryText}"/>
                        <TextBlock x:Name="LblJitter" Text="-- ms" FontSize="11" Foreground="{DynamicResource SecondaryText}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Position -->
                <StackPanel Grid.Column="3" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock x:Name="LblLat" Text="--" FontFamily="Consolas"  Foreground="{DynamicResource SecondaryText}" FontSize="10"/>
                        <TextBlock x:Name="LblLatDms" Text="" FontFamily="Consolas" Foreground="{DynamicResource SecondaryText}" FontSize="10" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock x:Name="LblLon" Text="--" FontFamily="Consolas"  Foreground="{DynamicResource SecondaryText}" FontSize="10"/>
                        <TextBlock x:Name="LblLonDms" Text="" FontFamily="Consolas" Foreground="{DynamicResource SecondaryText}" FontSize="10" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 1. Connection (Hidden but required for code-behind) -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Visibility="Collapsed">
            <TextBox x:Name="TxtPort"/>
            <Button x:Name="BtnConnect" Click="BtnConnect_Click"/>
        </StackPanel>

        <!-- 2. Main Controls (Tools + NTP) -->
        <Grid Grid.Row="2" Margin="0,0,0,15" x:Name="GridControls">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Tools Buttons (Left) -->
            <Border Grid.Column="0" Background="{DynamicResource CardBackground}" CornerRadius="8" Padding="10" Margin="0,0,15,10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.1" Direction="270" Color="{DynamicResource ShadowColor}"/>
                </Border.Effect>
                <Grid Margin="0,0,0,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="88"/>
                        <ColumnDefinition Width="Auto" MinWidth="84.997"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="1" Grid.Column="1" x:Name="BtnSettings" Content="Paramètres" Background="{DynamicResource AccentColor}" Foreground="White" Click="BtnSettings_Click" Height="NaN" FontSize="11" Margin="6,-1,5,5" HorizontalAlignment="Left" Width="70"/>
                    <Button Grid.Row="0" x:Name="BtnCalibration" Content="Calibration" Background="{DynamicResource SuccessColor}" Foreground="White" Click="BtnCalibration_Click" Height="NaN" FontSize="11" Margin="6,-1,5,5" HorizontalAlignment="Left" Width="70"/>
                    <Button Grid.Row="0" Grid.Column="1" x:Name="BtnLogs" Content="Logs" Background="{DynamicResource AccentColor}" Foreground="White" Click="BtnLogs_Click" Height="NaN" FontSize="11" Margin="6,-1,5,5" HorizontalAlignment="Left" Width="70"/>
                    <Button Grid.Row="1" Grid.Column="0" x:Name="BtnIqt" Content="Qualité" Background="{DynamicResource WarningColor}" Foreground="White" Click="BtnIqt_Click" Height="NaN" FontSize="11" Margin="6,-1,5,5" HorizontalAlignment="Left" Width="70"/>
                    <!--
                    <Path Grid.Row="2" Grid.ColumnSpan ="2"
                           HorizontalAlignment ="Left"
                           Margin ="6,5,0,0"
                           Height ="16"
                           Width ="16"
                           Data ="M19,11H11V17H19V11M23,19V5C23,3.88 22.1,3 21,3H3A2,2 0 0,0 1,5V19A2,2 0 0,0 3,21H21A2,2 0 0,0 23,19M21,19H3V4.97H21V19Z"
                           Fill ="{DynamicResource PrimaryText}"
                           Stretch ="Uniform"
                           Cursor ="Hand"
                           MouseLeftButtonDown ="BtnMiniMode_Click"
                           ToolTip ="Réduit la fenêtre au strict minimum. Double-cliquez sur la fenêtre réduite pour restaurer."/>
                    -->
                </Grid>
            </Border>

            <!-- NTP Control (Right) -->
            <Border Grid.Column="1" Background="{DynamicResource CardBackground}" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.1" Direction="270" Color="{DynamicResource ShadowColor}"/>
                </Border.Effect>
                <Grid Margin="0,0,0,14">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock x:Name="LblNtpStatus" Text="SERVICE NTP : INCONNU" FontWeight="Bold" Foreground="{DynamicResource WarningColor}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Text="Pairs" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource PrimaryText}" FontSize="11"/>
                        <ToggleButton x:Name="ChkShowPeers" VerticalAlignment="Center" Click="ChkShowPeers_Click" Style="{StaticResource SwitchToggleStyle}" Margin="0,0,20,0"/>
                        <Button x:Name="BtnStartNtp" Click="BtnStartNtp_Click" Width="40" Height="25" Background="{DynamicResource SuccessColor}" BorderThickness="0" Margin="0,0,5,0" ToolTip="Démarrer le service NTP">
                            <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z" Fill="White" Stretch="Uniform" Height="12" Width="12"/>
                        </Button>
                        <Button x:Name="BtnStopNtp" Click="BtnStopNtp_Click" Width="40" Height="25" Background="{DynamicResource ErrorColor}" BorderThickness="0" Margin="0,0,5,0" ToolTip="Arrêter le service NTP">
                            <Path Data="M6,6h12v12H6z" Fill="White" Stretch="Uniform" Height="12" Width="12"/>
                        </Button>
                        <Button x:Name="BtnRestartNtp" Click="BtnRestartNtp_Click" Width="40" Height="25" Background="{DynamicResource WarningColor}" BorderThickness="0" ToolTip="Redémarrer le service NTP">
                            <Path Data="M12,5V1L7,6L12,11V7A6,6 0 0,1 18,13A6,6 0 0,1 12,19A6,6 0 0,1 6,13H4A8,8 0 0,0 12,21A8,8 0 0,0 20,13A8,8 0 0,0 12,5Z" Fill="White" Stretch="Uniform" Height="12" Width="12"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Theme Slider (Right) -->
            <Border Grid.Column="2" Background="{DynamicResource CardBackground}" CornerRadius="8" Padding="10" Margin="15,0,0,10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.1" Direction="270" Color="{DynamicResource ShadowColor}"/>
                </Border.Effect>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!--<TextBlock Text="Thème" FontSize="10" Foreground="{DynamicResource SecondaryText}" HorizontalAlignment="Center" Margin="0,0,0,8"/> --> 
                    <Grid Width="90">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="Transparent" Cursor="Hand" MouseLeftButtonDown="ThemeIcon_Click" Tag="Light" ToolTip="Thème Clair">
                            <Path Data="M12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,2L14.39,5.42C13.65,5.15 12.84,5 12,5C11.16,5 10.35,5.15 9.61,5.42L12,2M3.34,7L7.5,5.29C7.24,6.03 7.1,6.82 7.1,7.66C7.1,7.77 7.1,7.89 7.1,8L3.34,7M3.36,17L7.12,16C7.12,16.11 7.1,16.23 7.1,16.34C7.1,17.18 7.24,17.97 7.5,18.71L3.36,17M12,22L9.61,18.58C10.35,18.85 11.16,19 12,19C12.84,19 13.65,18.85 14.39,18.58L12,22M20.64,17L16.5,18.71C16.76,17.97 16.9,17.18 16.9,16.34C16.9,16.23 16.9,16.11 16.9,16L20.64,17M20.66,7L16.9,8C16.9,7.89 16.9,7.77 16.9,7.66C16.9,6.82 16.76,6.03 16.5,5.29L20.66,7Z" Fill="{DynamicResource SecondaryText}" Stretch="Uniform" Height="16" Width="16" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="1" Background="Transparent" Cursor="Hand" MouseLeftButtonDown="ThemeIcon_Click" Tag="Dark" ToolTip="Thème Sombre">
                            <Path Data="M12 2A9.91 9.91 0 0 0 2.26 10.15A10 10 0 0 1 12 22A10 10 0 0 1 21.74 13.85A9.91 9.91 0 0 0 12 2Z" Fill="{DynamicResource SecondaryText}" Stretch="Uniform" Height="16" Width="16" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="2" Background="Transparent" Cursor="Hand" MouseLeftButtonDown="ThemeIcon_Click" Tag="Red" ToolTip="Thème Rouge">
                            <Path Data="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z" Fill="{DynamicResource SecondaryText}" Stretch="Uniform" Height="16" Width="16" HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 3. Peers Data (Logs) -->
        <Border Grid.Row="3" x:Name="GrpPeers" Background="{DynamicResource ConsoleBackground}" CornerRadius="4" MinHeight="150" Visibility="Collapsed">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="PnlNtpPeers" Margin="10"/>
            </ScrollViewer>
        </Border>

    </Grid>
</Window>

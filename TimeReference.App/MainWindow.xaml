<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="TimeReference.App.MainWindow"
        Title="Time Reference NMEA - Hand Controller"
        Width="350" Height="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Icon="Assets/Icone-Time-Reference.ico">

    <Window.Resources>
        <!-- Style pour les boutons du clavier de la raquette (style iOptron) -->
        <Style x:Key="KeypadButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="RootGrid">
                            <Grid.Effect>
                                <DropShadowEffect ShadowDepth="3" BlurRadius="5" Opacity="0.5" Color="Black" Direction="315"/>
                            </Grid.Effect>

                            <!-- Base du bouton pour l'effet de profondeur -->
                            <Rectangle RadiusX="20" RadiusY="20" Fill="#FF222222"/>

                            <!-- Surface du bouton avec gradient pour le relief -->
                            <Rectangle x:Name="ButtonSurface" RadiusX="20" RadiusY="20">
                                <Rectangle.Fill>
                                    <RadialGradientBrush Center="0.3,0.3" RadiusX="0.8" RadiusY="0.8">
                                        <GradientStop Color="#FF6F6F6F" Offset="0"/>
                                        <GradientStop Color="{Binding Background.(SolidColorBrush.Color), RelativeSource={RelativeSource Mode=TemplatedParent}}" Offset="1"/>
                                    </RadialGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- Content -->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonSurface" Property="Fill">
                                    <Setter.Value>
                                        <RadialGradientBrush Center="0.3,0.3" RadiusX="0.8" RadiusY="0.8">
                                            <GradientStop Color="#FF888888" Offset="0"/>
                                            <GradientStop Color="{Binding Background.(SolidColorBrush.Color), RelativeSource={RelativeSource Mode=TemplatedParent}}" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RootGrid" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="RootGrid" Property="Effect">
                                    <Setter.Value>
                                        <!-- On réduit la profondeur de l'ombre pour simuler l'enfoncement -->
                                        <DropShadowEffect ShadowDepth="1" BlurRadius="5" Opacity="0.4" Color="Black" Direction="315"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!-- Default background -->
            <Setter Property="Background" Value="#FF3D3D3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="35"/>
        </Style>

        <!-- Styles pour harmoniser l'apparence -->
        <Style x:Key="ClockTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Digital-7, Consolas, Monospace"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Corps de la raquette -->
        <Path x:Name="RaquetteBackground" Data="M 20,2 L 330,2 A 18,18 0 0 1 348,20 L 348,215 C 348,265 290,265 290,300 L 290,530 A 18,18 0 0 1 272,548 L 78,548 A 18,18 0 0 1 60,530 L 60,300 C 60,265 2,265 2,215 L 2,20 A 18,18 0 0 1 20,2 Z"
              Fill="{DynamicResource WindowBackground}"
              Stroke="{DynamicResource BorderColor}"
              StrokeThickness="4">
            <Path.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.5" Direction="270" Color="Black"/>
            </Path.Effect>
        </Path>

        <Grid Margin="20" x:Name="MainRootGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header / Logo -->
                <RowDefinition Height="Auto"/>
                <!-- Écran LCD -->
                <RowDefinition Height="*"/>
                <!-- Clavier -->
            </Grid.RowDefinitions>

            <!-- Logo / Titre -->
            <StackPanel x:Name="LogoPanel" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="NMEA" FontWeight="Black" FontSize="16" Foreground="{DynamicResource PrimaryText}" Margin="0,0,5,0"/>
                <TextBlock Text="CONTROLLER" FontWeight="Light" FontSize="16" Foreground="{DynamicResource SecondaryText}"/>
            </StackPanel>

            <!-- Écran LCD (Affichage des infos) -->
            <Border Grid.Row="1" x:Name="HeaderBorder" Background="#FF101010" CornerRadius="15" BorderBrush="#FF444444" BorderThickness="2" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Ligne 1 : Horloges -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                            <TextBlock Text="SYS" FontSize="9" Foreground="{DynamicResource AccentColor}"/>
                            <TextBlock x:Name="LblSysTime" Text="--:--:--" Style="{StaticResource ClockTextStyle}" Foreground="{DynamicResource AccentColor}" FontSize="16"/>
                        </StackPanel>

                        <TextBlock x:Name="LblTimeMode" Grid.Column="1" Text="UTC" FontSize="10" Foreground="{DynamicResource AccentColor}" VerticalAlignment="Center" FontWeight="Bold"/>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                            <TextBlock Text="GPS" FontSize="9" Foreground="{DynamicResource AccentColor}" HorizontalAlignment="Right"/>
                            <TextBlock x:Name="LblGpsTimeHeader" Text="--:--:--" Style="{StaticResource ClockTextStyle}" Foreground="{DynamicResource AccentColor}" FontSize="16"/>
                        </StackPanel>
                    </Grid>

                    <!-- Ligne 2 : Position Principale -->
                    <Border Grid.Row="1" BorderBrush="#FF333333" BorderThickness="0,1,0,1" Padding="0,2" Margin="0,0,0,8">

                        <StackPanel>
                            <Grid Margin="0,0,0,4">

                                <TextBlock x:Name="LblStatus" Text="Prêt" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource SecondaryText}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="LblHealth" Text="100%" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource SuccessColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock x:Name="LblLat" Text="--.-----" FontFamily="Consolas" Foreground="{DynamicResource AccentColor}" FontSize="14" Margin="0,0,5,0" Visibility="Collapsed"/>
                                    <TextBlock x:Name="LblLatDms" Text="" FontFamily="Consolas" Foreground="{DynamicResource AccentColor}" FontSize="10" VerticalAlignment="Bottom"/>
                                </StackPanel>
                            </Grid>
                            <Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock Text="Jitter: " FontSize="10" Foreground="{DynamicResource AccentColor}"/>
                                    <TextBlock x:Name="LblJitter" Text="-- ms" FontSize="10" Foreground="{DynamicResource AccentColor}" Margin="0,0,8,0"/>
                                    <TextBlock Text="Offset " FontSize="10" Foreground="{DynamicResource AccentColor}"/>
                                    <TextBlock x:Name="LblOffset" Text="-- ms" FontSize="10" Foreground="{DynamicResource AccentColor}"/>
                                </StackPanel>
                                <TextBlock Text="LON" Foreground="#FF888888" FontSize="10" VerticalAlignment="Center" Visibility="Collapsed"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock x:Name="LblLon" Text="--.-----" FontFamily="Consolas" Foreground="{DynamicResource AccentColor}" FontSize="14" Margin="0,0,5,0" Visibility="Collapsed"/>
                                    <TextBlock x:Name="LblLonDms" Text="" FontFamily="Consolas" Foreground="{DynamicResource AccentColor}" FontSize="10" VerticalAlignment="Bottom"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Ligne 3 : Status & Santé -->
                    <Grid Grid.Row="2" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <!-- <TextBlock x:Name="LblStatus" Text="Prêt" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource SecondaryText}"/> -->
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Santé: " FontSize="11" Foreground="{DynamicResource AccentColor}" Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>

                    <!-- Ligne 4 : Status NTP (Texte) -->
                    <TextBlock Grid.Row="4" x:Name="LblNtpStatus" Text="NTP: --" FontSize="9" Foreground="{DynamicResource AccentColor}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </Grid>
            </Border>

            <!-- Clavier de commande -->
            <UniformGrid x:Name="KeypadGrid" Grid.Row="2" Columns="3" Rows="4" Margin="0,40,0,0" HorizontalAlignment="Center">
                <!-- Rangée 3: NTP Control -->
                <Button x:Name="BtnStartNtp" Content="START" Style="{StaticResource KeypadButtonStyle}" Background="{DynamicResource SuccessColor}" Click="BtnStartNtp_Click"/>
                <Button x:Name="BtnStopNtp" Content="STOP" Style="{StaticResource KeypadButtonStyle}" Background="{DynamicResource ErrorColor}" Click="BtnStopNtp_Click"/>
                <Button x:Name="BtnRestartNtp" Content="RESTART" Style="{StaticResource KeypadButtonStyle}" Background="{DynamicResource WarningColor}" Click="BtnRestartNtp_Click"/>


                <!-- Rangée 1: Modes -->
                <Button x:Name="BtnMenu" Content="MENU" Style="{StaticResource KeypadButtonStyle}" Click="BtnSettings_Click" ToolTip="Ouvre les paramètres"/>
                <Button x:Name="BtnUtc" Content="UTC" Style="{StaticResource KeypadButtonStyle}" Click="ChkUtc_Click"/>
                <Button x:Name="BtnLogs" Content="LOGS" Style="{StaticResource KeypadButtonStyle}" Click="BtnLogs_Click"/>

                <!-- Rangée 2: Outils -->
                <Button x:Name="BtnCalibration" Content="Calibration" Style="{StaticResource KeypadButtonStyle}" Click="BtnCalibration_Click"/>
                <Button x:Name="BtnIqt" Content="IQT" Style="{StaticResource KeypadButtonStyle}" Click="BtnIqt_Click"/>
                <Button x:Name="BtnEnter" Content="" Style="{StaticResource KeypadButtonStyle}" IsEnabled="False" ToolTip="Non implémenté"/>

                <!-- Rangée 4: Système & UTC -->
                <Button x:Name="BtnBack" Content="Style" Style="{StaticResource KeypadButtonStyle}" Click="BtnBack_Click" ToolTip="Changer le thème"/>
                <Button Content="_" Style="{StaticResource KeypadButtonStyle}" Click="BtnMinimize_Click" Background="#FF555555"/>
                <Button Content="OFF" Style="{StaticResource KeypadButtonStyle}" Background="#FFCC0000" Click="BtnClose_Click" ToolTip="Fermer l'application"/>
            </UniformGrid>

            <!-- Éléments cachés requis par le code -->
            <StackPanel Visibility="Collapsed">
                <ToggleButton x:Name="ChkShowPeers"/>
                <Border x:Name="GrpPeers">
                    <StackPanel x:Name="PnlNtpPeers"/>
                </Border>
            </StackPanel>

        </Grid>
    </Grid>
</Window>

<Window x:Class="TimeReference.App.LoopstatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ext="clr-namespace:TimeReference.App.MarkupExtensions"
        Title="{ext:Lang TITLE_LOOPSTATS}" Height="700" Width="950"
        WindowStartupLocation="CenterOwner" Background="#FF1E1E1E">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Top Controls -->
            <RowDefinition Height="*"/>    <!-- Graph -->
            <RowDefinition Height="Auto"/> <!-- Bottom Actions -->
        </Grid.RowDefinitions>

        <!-- Top Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <ComboBox x:Name="CmbFiles" Width="200" Margin="0,0,20,0" SelectionChanged="CmbFiles_SelectionChanged" VerticalContentAlignment="Center"/>
                <Button x:Name="BtnRefresh" Content="{ext:Lang BTN_REFRESH}" Click="BtnRefresh_Click" Visibility="Collapsed"/>
                <Button x:Name="BtnResetZoom" Content="Reset Zoom" Click="BtnResetZoom_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Graph -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Border BorderBrush="#FF444444" BorderThickness="1" Background="Black" ClipToBounds="True"
                    MouseWheel="Graph_MouseWheel" MouseLeftButtonDown="Graph_MouseLeftButtonDown" 
                    MouseLeftButtonUp="Graph_MouseLeftButtonUp" MouseMove="Graph_MouseMove">
                <Canvas x:Name="CnvGraph" SizeChanged="CnvGraph_SizeChanged"/>
            </Border>
            <!-- LÃ©gende Overlay -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0">
                <CheckBox Content="Offset" Foreground="Cyan" IsChecked="True" Checked="Chk_Changed" Unchecked="Chk_Changed" Margin="0,0,10,0" VerticalContentAlignment="Center"/>
                <CheckBox Content="Jitter" Foreground="Magenta" IsChecked="True" Checked="Chk_Changed" Unchecked="Chk_Changed" Margin="0,0,10,0" VerticalContentAlignment="Center"/>
                <CheckBox Content="Drift" Foreground="Yellow" IsChecked="True" Checked="Chk_Changed" Unchecked="Chk_Changed" VerticalContentAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Bottom Actions -->
        <Grid Grid.Row="2">
            <Button x:Name="BtnClose" Content="{ext:Lang BTN_CLOSE}" Click="BtnClose_Click" HorizontalAlignment="Center" Width="100"/>
        </Grid>
    </Grid>
</Window>
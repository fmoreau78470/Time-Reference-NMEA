<Window x:Class="TimeReference.App.ExpertCalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assistant Calibration Expert" Height="500" Width="700" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Calibration GPS vs Internet" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Status Area -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10" Background="#F0F0F0">
            <StackPanel>
                <TextBlock x:Name="LblStep" Text="Étape : Prêt" FontWeight="Bold" FontSize="14"/>
                <ProgressBar x:Name="PbProgress" Height="20" Margin="0,10,0,0" Minimum="0" Maximum="100"/>
                <TextBlock x:Name="LblStatus" Text="Cliquez sur Démarrer pour lancer l'analyse." Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Logs -->
        <TextBox Grid.Row="2" x:Name="TxtLogs" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12" Background="Black" Foreground="LightGreen" TextWrapping="Wrap"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnStart" Content="Démarrer" Width="100" Margin="5" Click="BtnStart_Click"/>
            <Button x:Name="BtnApply" Content="Appliquer" Width="100" Margin="5" IsEnabled="False" Click="BtnApply_Click"/>
            <Button x:Name="BtnClose" Content="Fermer" Width="100" Margin="5" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
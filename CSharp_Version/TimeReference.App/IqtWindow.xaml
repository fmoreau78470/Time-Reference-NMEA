<Window x:Class="TimeReference.App.IqtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Qualité Signal GPS (IQT)" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Analyse de la Qualité du Signal" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Valeurs Numériques -->
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Score Global -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Score Global :" FontWeight="Bold" FontSize="14" Margin="0,0,10,10"/>
            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtTotalScore" Text="-- %" FontWeight="Bold" FontSize="14" Margin="0,0,0,10">
                <TextBlock.ToolTip>
                    Indice global de qualité (0-100%) calculé à partir du SNR, HDOP et nombre de satellites.
                </TextBlock.ToolTip>
            </TextBlock>

            <!-- SNR -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="SNR Moyen :" Margin="0,0,10,5"/>
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtSnrVal" Text="-- dB" FontWeight="Bold" Margin="0,0,0,5">
                <TextBlock.ToolTip>
                    Signal-to-Noise Ratio moyen des satellites utilisés. > 30dB est excellent.
                </TextBlock.ToolTip>
            </TextBlock>

            <!-- HDOP -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="HDOP :" Margin="0,0,10,5"/>
            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtHdopVal" Text="--" FontWeight="Bold" Margin="0,0,0,5">
                <TextBlock.ToolTip>
                    Horizontal Dilution of Precision. Plus c'est bas, mieux c'est (&lt; 1.0 idéal).
                </TextBlock.ToolTip>
            </TextBlock>

            <!-- Satellites -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Satellites :" Margin="0,0,10,5"/>
            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtSatVal" Text="--" FontWeight="Bold" Margin="0,0,0,5">
                <TextBlock.ToolTip>
                    Nombre de satellites utilisés pour le calcul de la position.
                </TextBlock.ToolTip>
            </TextBlock>
        </Grid>

        <!-- Status -->
        <TextBlock Grid.Row="2" x:Name="TxtStatus" Text="Initialisation..." Foreground="Gray" FontStyle="Italic" HorizontalAlignment="Center" Margin="0,20,0,10"/>

        <!-- Boutons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnRetry" Content="Réessayer" Width="100" Margin="0,0,10,0" Click="BtnRetry_Click" IsEnabled="False"/>
            <Button Content="Fermer" Width="100" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>

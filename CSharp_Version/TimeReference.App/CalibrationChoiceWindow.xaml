<Window x:Class="TimeReference.App.CalibrationChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choix de la Calibration" Height="300" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Choisissez le mode de calibration :" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
        
        <TextBlock Text="Si l'écart entre l'heure GPS et l'heure système excède 1s, il est recommandé de démarrer par le mode Expert." TextWrapping="Wrap" Foreground="DarkOrange" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,20"/>
        
        <Button x:Name="BtnSimple" Content="Simple (GPS Seul - Loopstats)" Height="40" Margin="0,0,0,10" Click="BtnSimple_Click"/>
        <Button x:Name="BtnExpert" Content="Expert (Comparaison Internet)" Height="40" Click="BtnExpert_Click"/>
        
        <TextBlock Text="Le mode Expert nécessite une connexion Internet." FontStyle="Italic" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</Window>